[module/mpd]
type = internal/mpd
interval = 2

; format-online = <label-song> <icon-prev> <toggle> <icon-next>
format-online = <icon-prev> <toggle> <icon-next>
; format-online-prefix = "  "
format-online-foreground = #80E6FE
format-playing = ${self.format-online}
format-paused = <icon-prev> <toggle> <icon-next>

format-offline = <label-offline>
format-offline-prefix = "  "
format-offline-prefix-foreground = #80E6FE

label-offline = "Offline "
format-offline-foreground = #80E6FE

label-song =  "%title% | %artist%"
; label-song =  "%title% "
label-song-maxlen = 35
label-song-ellipsis = true

icon-play = ""
icon-play-font = 2
icon-play-foreground = #80E6FE
icon-pause = ""
icon-pause-font = 2
icon-pause-foreground = #80E6FE
icon-stop = " "
icon-stop-foreground = #80E6FE
icon-prev = "玲"
icon-prev-font = 2
icon-prev-foreground = #80E6FE
icon-next = "怜 "
icon-next-font = 2
icon-next-foreground = #80E6FE

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/song]
type = internal/mpd

interval = 2

format-online = <label-song>
format-online-foreground = #80E6FE

format-playing = ${self.format-online}
format-paused = ${self.format-online}
format-stopped = ${self.format-online}

label-song =  "[ %title% ]"
; label-song =  "%title% - %artist%"

label-song-foreground = #80E6FE
label-song-maxlen = 20
label-song-ellipsis = true

icon-repeat = ""
icon-repeat-foreground = #80E6FE

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/song-icon]

type = custom/text

content = ""
content-font = 3
content-foreground = #80E6FE
content-padding = 0
click-left = music --albumArtCover

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/info-cava]
type = custom/script
exec =  ~/.config/bspwm/themes/Hack/polybar/scripts/cava -c average -f 60

format = <label>
label = " %output% "
format-foreground = #000B1E
format-background = #80E6FE
tail = true

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/mic-control]

type = custom/script
exec = ~/.config/bspwm/themes/Hack/polybar/scripts/mic-control
tail = true
label = %output%

click-right = pavucontrol
click-left  = ~/.config/bspwm/themes/Hack/polybar/scripts/mic-control --mute
scroll-up   = ~/.config/bspwm/themes/Hack/polybar/scripts/mic-control --up
scroll-down = ~/.config/bspwm/themes/Hack/polybar/scripts/mic-control --down

