[module/volume]
type = internal/pulseaudio
sink = alsa_output.pci-0000_12_00.3.analog-stereo
use-ui-max = false
interval = 5

format-volume = <ramp-volume><label-volume>

format-muted = <label-muted>
format-muted-prefix = " 婢"
format-muted-prefix-font = 3
format-muted-prefix-foreground = #ff0000
format-muted-prefix-background = ${color.GREEN}

label-volume = %percentage%%
label-volume-foreground = ${color.BACKGROUND}
label-volume-background = ${color.GREEN}

label-muted = " Mute"
label-muted-foreground = #ff0000
label-muted-background = ${color.GREEN}

ramp-volume-0 = " 奄 "
ramp-volume-1 = " 奄 "
ramp-volume-2 = " 奄 "
ramp-volume-3 = " 奔 "
ramp-volume-4 = " 奔 "
ramp-volume-5 = " 奔 "
ramp-volume-6 = " 墳 "
ramp-volume-7 = " 墳 "
ramp-volume-8 = " 墳 "
ramp-volume-9 = " 墳 "
ramp-volume-font = 3
ramp-volume-foreground = ${color.BACKGROUND}
ramp-volume-background = ${color.GREEN}

ramp-headphones-0 = 
ramp-headphones-1 = 

click-right = pavucontrol
;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/mpd]
type = internal/mpd

;;host = 127.0.0.1
;;port = 6600
;;password = mysecretpassword

interval = 2

format-online = <label-song> <icon-prev> <toggle> <icon-next>
format-online-prefix = "  "
; format-online-prefix-foreground = ${color.GREEN}
format-online-background = #94F9C2
format-online-foreground = ${color.BACKGROUND}

format-playing = ${self.format-online}
format-paused = <label-song> <icon-prev> <toggle><icon-next>

format-offline = <label-offline>
format-offline-prefix = "  "
format-offline-prefix-foreground = ${color.BACKGROUND}
format-offline-prefix-background = #94F9C2

label-offline = "Offline "
format-offline-background = #94F9C2
format-offline-foreground = ${color.BACKGROUND}

; label-song =  "%title% | %artist%"
label-song =  "%title% "
label-song-maxlen = 40
label-song-ellipsis = true

icon-play = " "
icon-play-font = 2
icon-play-foreground = ${color.BACKGROUND}
icon-pause = ""
icon-pause-font = 2
icon-pause-foreground = ${color.BACKGROUND}
icon-stop = " "
icon-stop-foreground = ${color.BACKGROUND}
icon-prev = "玲"
icon-prev-font = 2
icon-prev-foreground = ${color.BACKGROUND}
icon-next = "怜 "
icon-next-font = 2
icon-next-foreground = ${color.BACKGROUND}


;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/info-cava]
type = custom/script
exec =  ~/.config/bspwm/themes/JS\\ Coffee/polybar/scripts/cava -c average -f 60

format = <label>
label = %output%
format-foreground = ${color.BACKGROUND}
format-background = ${color.GREEN}
tail = true

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/mic-control]

type = custom/script
exec = ~/.config/bspwm/themes/JS\\ Coffee/polybar/scripts/mic-control
tail = true
label = %output%

click-right = pavucontrol
click-left  = ~/.config/bspwm/themes/JS\\ Coffee/polybar/scripts/mic-control --mute
scroll-up   = ~/.config/bspwm/themes/JS\\ Coffee/polybar/scripts/mic-control --up
scroll-down = ~/.config/bspwm/themes/JS\\ Coffee/polybar/scripts/mic-control --down

