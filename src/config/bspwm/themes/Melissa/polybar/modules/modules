[module/date]
type = internal/date

interval = 1.0

time = %I:%M %p
time-alt = %A, %d %B %Y

format = <label>
format-prefix = "  "
format-prefix-font = 3
format-prefix-foreground = ${color.FOREGROUND}
format-prefix-background = #3B4252

label = %time%
label-font = 4
label-foreground = ${color.FOREGROUND}
label-background = #3B4252

